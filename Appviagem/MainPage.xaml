<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Appviagem.MainPage">

    <ContentPage.ToolbarItems>
        <ToolbarItem 
    </ContentPage.ToolbarItems>
   

    <StackLayout Padding="20">
        <Label Text="Origem:" />
        <Entry x:Name="origemR" Placeholder="Informe a origem" />

        <Label Text="Destino:" />
        <Entry x:Name="destinoR" Placeholder="Informe o destino" />

        <Label Text="Valor pedágio:" />
        <Entry x:Name="pedagioR" Placeholder="Informe o valor do/s pedágio/s" />
        
        <Label Text="Distância da Viagem (km):" />
        <Entry x:Name="distanciaR" Placeholder="Informe a distância" />

        <Label Text="Eficiência de Combustível (km/L):" />
        <Entry x:Name="eficienciaR" Placeholder="Informe a eficiencia" />

        <Label Text="Custo do Combustível por Litro (R$):" />
        <Entry x:Name="custocombustivelR" Placeholder="Informe o preço do combustível" />

    </StackLayout>

</ContentPage>

